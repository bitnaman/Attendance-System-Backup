# ===========================================
# BACKEND ENVIRONMENT CONFIGURATION
# Copy this file to .env and update with your actual values
# ===========================================

# ===========================================
# STORAGE CONFIGURATION
# ===========================================

# LOCAL STORAGE (Default for Development)
PHOTO_STORAGE_TYPE=local
BACKEND_BASE_URL=http://localhost:8000

# AWS S3 CLOUD STORAGE (For Production Deployment)
# To switch to S3: Change PHOTO_STORAGE_TYPE to "s3" and uncomment below
# PHOTO_STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name-here
# BACKEND_BASE_URL=https://api.yourdomain.com

# ===========================================
# DATABASE CONFIGURATION (SQLite)
# ===========================================

# SQLite Database File Path (Default for Development)
# Database file will be created automatically in backend directory
DB_FILE=attendance.db

# For production, you can specify an absolute path:
# DB_FILE=/var/lib/attendance/attendance.db

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO

# Logging Throttle Configuration (in milliseconds)
# Controls the minimum time between similar log messages
# Examples:
#   1000 = Log similar messages at most once per second
#   5000 = Log similar messages at most once per 5 seconds
#   500  = Log similar messages at most once per 0.5 seconds
#   100  = Log similar messages at most once per 0.1 seconds
LOG_THROTTLE_MS=1000

# ===========================================
# FACE RECOGNITION CONFIGURATION
# ===========================================
FACE_RECOGNITION_MODEL=Facenet512
FACE_DETECTOR_BACKEND=mtcnn
FACE_DISTANCE_THRESHOLD=0.5
FACE_CONFIDENCE_THRESHOLD=0.65

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes

# CORS Settings (for production, specify actual origins)
CORS_ORIGINS=*

# Server Settings
HOST=0.0.0.0
PORT=8000
