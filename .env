# ===========================================
# DOCKER ENVIRONMENT CONFIGURATION
# Facial Attendance System
# ===========================================

# ===========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===========================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=dental_attendance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
REDIS_CACHE_EXPIRATION_SECONDS=300

# ===========================================
# STORAGE CONFIGURATION
# ===========================================
# Options: "local" or "s3"
PHOTO_STORAGE_TYPE=local
PHOTO_STORAGE_PATH=/app/static

# AWS S3 Configuration (if using S3)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
BACKEND_BASE_URL=http://localhost:8000
HOST=0.0.0.0
PORT=8000

# ===========================================
# FACE RECOGNITION CONFIGURATION
# ===========================================
# Model: ArcFace, Facenet, Facenet512, GhostFaceNet, SFace
FACE_RECOGNITION_MODEL=ArcFace

# Detector: opencv, mtcnn, ssd, retinaface, dlib, mediapipe
FACE_DETECTOR_BACKEND=retinaface

# Thresholds
FACE_DISTANCE_THRESHOLD=18.0
FACE_CONFIDENCE_THRESHOLD=0.65

# Adaptive threshold mode: enabled or disabled
ADAPTIVE_THRESHOLD_MODE=disabled

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
# Compute mode: auto, gpu, cpu
COMPUTE_MODE=auto

# GPU Settings
TF_FORCE_GPU_ALLOW_GROWTH=true
CUDA_VISIBLE_DEVICES=0

# Processing
ENABLE_ASYNC_PROCESSING=true
BATCH_SIZE=4
MAX_WORKERS=2

# ===========================================
# FEATURES CONFIGURATION
# ===========================================
LOAD_BALANCER_ENABLED=true
MONITORING_ENABLED=true
PREDICTIVE_ANALYTICS_ENABLED=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_THROTTLE_MS=1000

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
REACT_APP_API_BASE=http://localhost:8000
REACT_APP_PHOTO_BASE=http://localhost:8000
REACT_APP_NAME=Facial Attendance System
REACT_APP_VERSION=2.0.0
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_ANALYTICS=true
