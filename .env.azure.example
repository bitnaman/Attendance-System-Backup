# ===========================================
# AZURE DEPLOYMENT ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update with your actual Azure values
# ===========================================

# ===========================================
# DATABASE CONFIGURATION (SQLite)
# ===========================================
DATABASE_TYPE=sqlite
DB_FILE=/app/data/attendance.db

# ===========================================
# STORAGE CONFIGURATION
# ===========================================
# For Azure Blob Storage (recommended for production):
# PHOTO_STORAGE_TYPE=azure
# AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
# AZURE_CONTAINER_NAME=attendance-photos

# For local storage (good for testing):
PHOTO_STORAGE_TYPE=local
BACKEND_BASE_URL=https://your-app-name.azurewebsites.net

# ===========================================
# REDIS CONFIGURATION (Azure Cache for Redis)
# ===========================================
# For Azure Redis Cache:
REDIS_HOST=your-redis-name.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=your-redis-primary-key
REDIS_DB=0
REDIS_CACHE_EXPIRATION_SECONDS=300

# For local testing without Redis (optional):
# REDIS_HOST=localhost
# REDIS_PORT=6379

# ===========================================
# AUTHENTICATION (CRITICAL - CHANGE IN PRODUCTION!)
# ===========================================
# Generate secure key: python -c "import secrets; print(secrets.token_hex(32))"
AUTH_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_64_CHARACTER_RANDOM_STRING
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ===========================================
# FACE RECOGNITION CONFIGURATION (CPU-OPTIMIZED)
# ===========================================
FACE_RECOGNITION_MODEL=Facenet512
FACE_DETECTOR_BACKEND=opencv
FACE_DISTANCE_THRESHOLD=16.0
FACE_CONFIDENCE_THRESHOLD=0.65
ADAPTIVE_THRESHOLD_MODE=enabled

# Performance settings for CPU-only deployment
COMPUTE_MODE=cpu
BATCH_SIZE=1
MAX_WORKERS=2
ENABLE_ASYNC_PROCESSING=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_THROTTLE_MS=1000

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
REACT_APP_API_BASE=https://your-app-name.azurewebsites.net
REACT_APP_PHOTO_BASE=https://your-app-name.azurewebsites.net
REACT_APP_NAME=Bharati Facify
REACT_APP_VERSION=2.0.0

# ===========================================
# FEATURE FLAGS
# ===========================================
LOAD_BALANCER_ENABLED=true
MONITORING_ENABLED=true
PREDICTIVE_ANALYTICS_ENABLED=false

# ===========================================
# SERVER CONFIGURATION
# ===========================================
HOST=0.0.0.0
PORT=8000
MAX_FILE_SIZE=10485760
CORS_ORIGINS=*
