# ===========================================
# FRONTEND ENVIRONMENT CONFIGURATION
# Copy this file to .env for environment-specific settings
# ===========================================

# ===========================================
# LOCAL STORAGE CONFIGURATION (Currently Active)
# ===========================================
# Backend API URL
REACT_APP_API_BASE=http://localhost:8000

# Photo Base URL (for local storage)
REACT_APP_PHOTO_BASE=http://localhost:8000

# ===========================================
# PRODUCTION CONFIGURATION
# For deployment, create .env.production with your server IP:
# ===========================================
# REACT_APP_API_BASE=http://YOUR_SERVER_IP:8000
# REACT_APP_PHOTO_BASE=http://YOUR_SERVER_IP:8000

# ===========================================
# APPLICATION INFORMATION
# ===========================================
REACT_APP_NAME=Bharati Facify
REACT_APP_VERSION=2.0.0

# ===========================================
# FEATURE FLAGS
# ===========================================
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_ANALYTICS=true
